<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".xacnhan"
    android:id="@+id/xacnhanContener">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_in_xacnhan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_back"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NHẬP MÃ XÁC NHẬN"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="Số điện thoại của bạn là +84923800536"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="Vui lòng kiểm tra tin nhắn để lấy mã"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"

            >
            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:textColor="#ffffff"
                android:background="#00CCCC"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:textColor="#ffffff"
                android:background="#00CCCC"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:textColor="#ffffff"
                android:background="#00CCCC"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:textColor="#ffffff"
                android:background="#00CCCC"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:textColor="#ffffff"
                android:background="#00CCCC"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:textColor="#ffffff"
                android:background="#00CCCC"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/xacnhan"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Tiếp Tục"
            android:gravity="fill"
            android:backgroundTint="#0099FF"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chưa nhận được mã xác nhận?"
            android:gravity="right"
            android:textColor="#0099FF"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bằng cách nhấn 'Tiếp tuc', bạn đã đồng ý với Điều kiện Sử Dụng và Chính Sách Riêng Tư của DAIKIN Việt Nam"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            />
    </LinearLayout>





</LinearLayout>